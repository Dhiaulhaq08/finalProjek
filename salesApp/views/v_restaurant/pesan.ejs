                    <a class="nav-link text-green btn btn-light" href="/pesan/home">Pesan sekarang</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
        <!-- end navbar -->
         <!-- form pemesanan -->
        <div class="container mt-3">
            <h2 class="text-center">Form Pemesanan Restoran</h2>
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Nama Lengkap</label>
                    <input type="text" class="form-control" id="name" placeholder="Masukkan nama Anda" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Masukkan email Anda" required>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Nomor Telepon</label>
                    <input type="tel" class="form-control" id="phone" placeholder="Masukkan nomor telepon" required>
                </div>
                <div class="mb-3">
                    <label for="date" class="form-label">Tanggal Pemesanan</label>
                    <input type="date" class="form-control" id="date" required>
                </div>
                <div class="mb-3">
                    <label for="time" class="form-label">Waktu Pemesanan</label>
                    <input type="time" class="form-control" id="time" required>
                </div>
                <div class="mb-3">
                    <label for="guests" class="form-label">Jumlah Tamu</label>
                    <input type="number" class="form-control" id="guests" placeholder="Masukkan jumlah tamu" required>
                </div>
                <div class="mb-3">
                    <label for="specialRequest" class="form-label">Permintaan Khusus</label>
                    <textarea class="form-control" id="specialRequest" rows="3" placeholder="Tulis permintaan khusus Anda"></textarea>
                </div>
                <button type="submit" class="btn btn-success w-100">Kirim Pemesanan</button>
            </form>
        </div>
        <!-- end form pemesanan -->
         <!-- footer -->
         <footer class="bg-success text-light py-4 mt-5">
            <div class="container">
              <div class="row">
                <!-- About Section -->
                <div class="col-md-4 mb-3">
                  <h5>About Us</h5>
                  <p>
                    Welcome to Groucetourant, where taste meets perfection. We serve the finest dishes crafted with passion and fresh ingredients.
                  </p>
                </div>
                <!-- Contact Section -->
                <div class="col-md-4 mb-3">
