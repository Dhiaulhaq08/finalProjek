                  <a href="#" class="text-light"><i class="bi bi-youtube"></i></a>
                </div>
              </div>
              <!-- Copyright Section -->
              <div class="text-center mt-3">
                <p class="mb-0">&copy; 2024 [Restaurant Name]. All rights reserved.</p>
              </div>
            </div>
          </footer>
          <!-- end footer -->
    
